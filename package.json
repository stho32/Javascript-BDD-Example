{
  "name": "javascript-bdd-notes",
  "version": "1.0.0",
  "description": "course: https://teamtreehouse.com/library/javascript-unit-testing/introducing-unit-testing/introduction",
  "main": "Source/index.js",
  "scripts": {
    "test": "mocha --require blanket Tests",
    "test-minimal": "mocha --require blanket --reporter min Tests",
    "test-watch": "mocha --require blanket --reporter min --watch Tests"
  },
  "config": {
    "blanket": {
      "pattern": [ "Source" ],
      "data-cover-never": [ "node_modules", "Tests" ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stho32/Javascript-BDD-Notes.git"
  },
  "author": "Stefan Hoffmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stho32/Javascript-BDD-Notes/issues"
  },
  "homepage": "https://github.com/stho32/Javascript-BDD-Notes#readme",
  "devDependencies": {
    "blanket": "^1.2.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mocha": "^5.0.5",
    "mocha-lcov-reporter": "^1.3.0"
  }
}
